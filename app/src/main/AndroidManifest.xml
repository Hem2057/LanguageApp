<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LanguageApp">

        <!-- Welcome (Launcher) -->



        <activity android:name=".WelcomeActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Role selection + login (your current MainActivity) -->
        <activity android:name=".MainActivity" android:exported="false" />

        <!-- Word list details -->
        <activity android:name=".WordDetailActivity" android:exported="false" />

        <!-- Test/Line generator screen -->
        <activity android:name=".LinesActivity" android:exported="false" />

        <!-- Keep if you still use it -->
        <activity android:name=".SecondActivity" android:exported="false"/>

        <activity android:name=".RoleSelectionActivity" android:exported="false" />

        <activity android:name=".WordActivity" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>



    </application>
</manifest>
