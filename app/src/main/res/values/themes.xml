<resources>
    <!-- App theme (Material 3) -->
    <style name="Theme.LanguageApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/tiwi_primary</item>
        <item name="colorOnPrimary">@color/tiwi_on_primary</item>
        <item name="colorPrimaryContainer">@color/tiwi_primary_dark</item>

        <item name="colorSecondary">@color/tiwi_accent_purple</item>

        <!-- Surfaces / text -->
        <item name="colorSurface">@color/tiwi_surface</item>
        <item name="colorOnSurface">@color/tiwi_text</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/tiwi_background</item>
        <item name="colorOnBackground">@color/tiwi_text</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/tiwi_primary_dark</item>
        <item name="android:navigationBarColor">@color/tiwi_surface</item>

        <!-- Default text -->
        <item name="android:textColorPrimary">@color/tiwi_text</item>
        <item name="android:textColorSecondary">@color/tiwi_text_secondary</item>
    </style>
</resources>
